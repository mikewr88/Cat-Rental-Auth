<!DOCTYPE html>
<html>
<head>
  <title>NinetyNineCatsDay1</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<h1>
  <% if current_user %>
    <p>User: <%= current_user.user_name %></p>
    <p><%= button_to "Logout", session_url, method: "delete" %></p>
  <% else %>
    <p><%= button_to "Login", new_session_url, method: "get" %></p>
  <% end %>
</h1>

<%= yield %>

</body>
</html>

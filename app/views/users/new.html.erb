
<%= render "shared/errors" %>

<form action = '/users' method = "post">

  <input type="hidden"
           name="authenticity_token"
           value="<%= form_authenticity_token %>">
<marquee>
<p><label for="user_name">Username: </label>
  <input type="text" name="user[user_name]" id="user_name"></p>
</marquee>
<p><label for="password">Password: </label>
  <input type="password" name="user[password]" id="password"></p>

  <input type="submit" value="Make Account">

</form>
